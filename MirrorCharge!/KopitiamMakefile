override _COQCMD = \
	mkdir -p "`dirname "$@"`" && coqc $(COQFLAGS) "$<" && mv "$<o" "$@" 
COQFLAGS = -noglob

bin/%.vo: src/%.v
	$(_COQCMD)
override COQFLAGS += -R "src" ""
override COQFLAGS += -R "bin" ""
override COQFLAGS += -R "../coq-ext-lib/theories" "ExtLib"
override COQFLAGS += -R "../mirror-core/src" "MirrorCore"
override COQFLAGS += -R "../Charge!/bin" ""

OBJECTS = \
	bin/ILogicFunc.vo

all: $(OBJECTS)
clean:
	rm -f $(OBJECTS)

bin/ILogicFunc.vo: src/ILogicFunc.v